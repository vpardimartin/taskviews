<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carts.TaskInputDescriptionController">

    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="30.0"
          AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0"
          xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <TextField fx:id="descriptionTextField" alignment="CENTER" promptText="Description"
                   VBox.vgrow="ALWAYS">
         <font>
            <Font size="30.0" />
         </font>
         <VBox.margin>
            <Insets top="60.0" />
         </VBox.margin></TextField>
        <Button fx:id="saveDescriptionButton" alignment="CENTER"
                contentDisplay="CENTER" onAction="#onDescriptionButtonClick"
                prefHeight="46.0" prefWidth="119.0" text="Save" textAlignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin></Button>
    </VBox>

</AnchorPane>
